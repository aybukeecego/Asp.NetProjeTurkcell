@{
}

@model List<ProductListComponentViewModel>


<div class="row">
    <div class="col-md-4">
		<a asp-action="Index" asp-controller="Products" class="btn btn-primary">Ürünlere git</a>

		<table class="table table-success table-striped">
			<thead>
				<tr>
					<th>İsim</th>
					<th>Açıklama</th>

				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.Name</td>
						<td>@item.Description</td>
					</tr>
				}
			</tbody>
		</table>
    </div>
</div>